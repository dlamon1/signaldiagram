{
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"],
	"compilerOptions": {
		"outDir": "./public",
		// "allowJs": true,
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		// "strict": true,
		"target": "es6"
	},
	"extends": "./.svelte-kit/tsconfig.json"
}
